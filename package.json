{
  "name": "nichoth",
  "description": "http://nichoth.com/",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "serve": "concurrently --kill-others \"npx ecstatic public\" \"npm run watch-sass\"",
    "start": "npm run build && npm run serve",
    "watch-sass": "sass --watch src/style/style.scss public/style.css",
    "build": "mkdir -p public && npm run copy && node ./build.js && npm run sass && npm run build-animation",
    "build-animation": "mkdir -p public/animation && cp src/animation.html public/animation/index.html",
    "copy": "mkdir -p public && cp src/_static/* public && cp src/animate.js public && cp src/favicon.ico public && mkdir -p public/font && cp src/font/* public/font && cp src/index.html public && mkdir -p public/img && cp src/img/*.* public/img/ && mkdir -p public/drafts && cp src/drafts/* public/drafts",
    "sass": "sass src/style/style.scss public/style.css",
    "deploy": "npm run build && surge public"
  },
  "devDependencies": {
    "after": "^0.8.2",
    "concurrently": "^5.3.0",
    "ecstatic": "^4.1.4",
    "glob": "^7.1.7",
    "gray-matter": "^4.0.3",
    "hyperstream": "^1.2.2",
    "lodash": "^4.17.21",
    "marked": "^1.2.9",
    "mkdirp": "^1.0.4",
    "sass": "^1.39.0",
    "surge": "^0.21.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/nichoth.git"
  },
  "author": "Nick Thomas <nichoth@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nichoth/nichoth/issues"
  },
  "homepage": "https://github.com/nichoth/nichoth#readme",
  "private": true,
  "dependencies": {
  }
}
