{
  "name": "nichoth",
  "description": "http://nichoth.com/",
  "version": "0.0.0",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "start": "npm run build && concurrently --kill-others \"ecstatic public\" \"npm run watch-sass\"",
    "watch-sass": "node-sass --include-path \"node_modules/bourbon/core\" --include-path \"node_modules/bourbon-neat/core\" -w style/style.scss -o public",
    "build": "npm run build-html && npm run build-js && npm run sass",
    "build-html": "node build.js",
    "build-js": "browserify -p esmify -t uglifyify --debug src/index.js > public/bundle.js",
    "sass": "node-sass --include-path \"node_modules/bourbon/core\" --include-path \"node_modules/bourbon-neat/core\" style/style.scss > public/style.css",
    "deploy": "npm run build && surge public"
  },
  "dependencies": {
    "after": "^0.8.1",
    "canvas-particles": "0.0.8",
    "catch-links": "^2.0.0",
    "htm": "^3.0.4",
    "preact": "^10.5.5",
    "randomcolor": "^0.4.3",
    "routes": "^2.1.0",
    "single-page": "^1.1.0",
    "ssb-tags": "^0.2.0",
    "url-join": "0.0.1"
  },
  "devDependencies": {
    "@nichoth/ssb-tags": "0.0.8",
    "bourbon": "^7.0.0",
    "bourbon-neat": "^4.0.0",
    "browserify": "^16.5.2",
    "concurrently": "^5.3.0",
    "ecstatic": "^4.1.4",
    "esmify": "^2.1.1",
    "hyperstream": "^1.2.2",
    "mkdirp": "^1.0.4",
    "node-sass": "^4.14.1",
    "pull-scan": "^1.0.0",
    "pull-stream": "^3.6.14",
    "ssb-web": "0.0.11",
    "surge": "^0.21.6",
    "uglifyify": "^5.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/nichoth.git"
  },
  "author": "Nick Thomas <nichoth@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nichoth/nichoth/issues"
  },
  "homepage": "https://github.com/nichoth/nichoth#readme",
  "private": true
}
