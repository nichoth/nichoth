{
  "name": "nichoth",
  "description": "http://nichoth.com/",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "serve": "concurrently --kill-others \"npx ecstatic public\" \"npm run watch-sass\"",
    "start": "npm run build && npm run serve",
    "dev": "concurrently --kill-others \"budo --dir public/ --live\" \"npm run watch-sass\"",
    "watch-sass": "node-sass -w src/style/style.scss -o public",
    "build": "rm -rf ./public/posts/img/* && node build.js && npm run copy && npm run build-list && npm run build-notebooks && npm run build-log && npm run build-js && npm run sass && mkdir -p public/animation && cp src/animation.html public/animation/index.html && node ./build-flobz.js",
    "copy": "cp src/GTWalsheim-Regular.woff2 public/font && cp src/index.html public && cp src/img/*.* public/img/",
    "build-js": "browserify src/lib/main.js > public/animate.js && browserify -p esmify -t uglifyify --debug src/index.js > public/bundle.js",
    "build-log": "node ./build-log.js",
    "build-list": "node ./build-list.js",
    "build-notebooks": "node build-notebooks.js ./src/img/notebooks/*",
    "sass": "node-sass src/style/style.scss > public/style.css",
    "deploy": "npm run build && surge public"
  },
  "dependencies": {
    "after": "^0.8.1",
    "canvas-particles": "0.0.8",
    "catch-links": "^2.0.0",
    "htm": "^3.0.4",
    "mutant": "^3.29.0",
    "preact": "^10.5.5",
    "randomcolor": "^0.4.3",
    "routes": "^2.1.0",
    "scuttle-tag": "^0.5.0",
    "single-page": "^1.1.0",
    "ssb-tags": "^0.2.0",
    "url-join": "0.0.1"
  },
  "devDependencies": {
    "@nichoth/ssb-tags": "0.0.8",
    "browserify": "^16.5.2",
    "concurrently": "^5.3.0",
    "ecstatic": "^4.1.4",
    "esmify": "^2.1.1",
    "glob": "^7.1.6",
    "hyperstream": "^1.2.2",
    "marked": "^1.2.9",
    "mkdirp": "^1.0.4",
    "node-sass": "^4.14.1",
    "pull-scan": "^1.0.0",
    "pull-stream": "^3.6.14",
    "sharp": "^0.27.2",
    "ssb-web": "^0.0.14",
    "surge": "^0.21.6",
    "uglifyify": "^5.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/nichoth.git"
  },
  "author": "Nick Thomas <nichoth@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nichoth/nichoth/issues"
  },
  "homepage": "https://github.com/nichoth/nichoth#readme",
  "private": true
}
