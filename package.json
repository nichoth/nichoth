{
  "name": "nichoth",
  "description": "http://nichoth.com/",
  "version": "0.0.0",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "watch": "npm run watch-sass & npm run watch-js",
    "watch-js": "watchify lib/main.js -o public/bundle.js -dv",
    "watch-sass": "node-sass --include-path \"node_modules/bourbon/core\" --include-path \"node_modules/bourbon-neat/core\" -w style/style.scss -o public",
    "sass": "node-sass --include-path \"node_modules/bourbon/core\" --include-path \"node_modules/bourbon-neat/core\" style/style.scss > public/style.css",
    "start": "concurrently --kill-others \"npm run watch\" \"ecstatic public\"",
    "dev": "npm run watch & ecstatic public",
    "build": "browserify lib/main.js > public/bundle.js && npm run sass",
    "deploy": "npm run build && surge public"
  },
  "dependencies": {
    "after": "^0.8.1",
    "canvas-particles": "0.0.8",
    "catch-links": "^2.0.0",
    "randomcolor": "^0.4.3",
    "routes": "^2.1.0",
    "single-page": "^1.1.0",
    "url-join": "0.0.1"
  },
  "devDependencies": {
    "bourbon": "^7.0.0",
    "bourbon-neat": "^4.0.0",
    "concurrently": "^5.3.0",
    "ecstatic": "^4.1.4",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.14.1",
    "surge": "^0.21.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nichoth/nichoth.git"
  },
  "author": "Nick Thomas <nichoth@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nichoth/nichoth/issues"
  },
  "homepage": "https://github.com/nichoth/nichoth#readme",
  "private": true
}
